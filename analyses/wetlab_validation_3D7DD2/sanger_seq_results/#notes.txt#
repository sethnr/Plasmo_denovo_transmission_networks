for FA in clipped*fa; 
do 
   bwa bwasw -b1 -q1 -r1 $PFREF $FA > ${FA/.fa/.sam}; 
   samtools view -Sb ${FA/.fa/.sam} > ${FA/.fa/.bam}; 
   samtools sort ${FA/.fa/.bam} ${FA/.fa/.S}; 
   mv ${FA/.fa/.S.bam} ${FA/.fa/.bam}; 
   samtools index ${FA/.fa/.bam}; 
done

for SAMPLE in 2D4 3D7 FDK ;
do 
   addReadGroups -b clipped_sanger_seqs.${SAMPLE}.bam \
     -o clipped_sanger_seqs.${SAMPLE}.RG.bam \
     -s $SAMPLE -i $SAMPLE ; 
   mv clipped_sanger_seqs.${SAMPLE}.RG.bam clipped_sanger_seqs.${SAMPLE}.bam; 
   LeftAlignINDELsBAM -b clipped_sanger_seqs.${SAMPLE}.bam; 
   rm clipped_sanger_seqs.${SAMPLE}.bam.bai  clipped_sanger_seqs.${SAMPLE}.bai
   samtools index  clipped_sanger_seqs.${SAMPLE}.bam
done

perl $DISCO1/scripts/getIGVPics.pl $PFREF target_posns.bed `ls clipped*bam `

use .igv-2.3.18
igv -b target_posns.igv


perl -lane 'print join("\t",$F[1],$F[2]-50,$F[2]+50,"F".$F[0]."_".$F[2]);' validation_var_loci.txt > validation_var_loci.bed
perl $DISCO1/scripts/getIGVPics.pl $PFREF validation_var_loci.bed `ls clipped*bam `